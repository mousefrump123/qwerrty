@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TMDT.Models.DONHANG>
@{
    ViewBag.Title = "QLDonHang";
    Layout = "~/Views/Shared/Layout-NgBan.cshtml";
}

<div class="col l-9-1 m-12 c-12">
    <div class="home-product">
        <div class="row sm-gutter" style="padding-right: 16px;">
            <div class="title-page">
                <div class="title-page__link">
                    <a href="@Url.Action("KenhNgBan", "NgBan")" class="title-page__link-label">Trang chủ</a>
                    <i class='bx bx-chevron-right'></i>
                    <a href="@Url.Action("QLDonHang", "DonHang")" class="title-page__link-label" style="color: black;">Đơn hàng</a>
                </div>
            </div>
            <div class="product-list-main">
                <div class="">
                    <div class="fixed-container" style="top: 56px; z-index: 1000">
                        <div class="portal-panel">
                            <div class="tabs tafi-tabs tafi-tabs-line tafi-tabs-top">
                                <div class="tafi-tabs__nav">
                                    <div class="tafi-tabs__nav-warp">
                                        <div class="tafi-tabs__nav-tabs" style="transform: translateX(0px);">
                                            <div class="tafi-tabs__nav-tab active" style="white-space: normal;">
                                                <span class="tabs__tab">Tất cả</span>
                                            </div>
                                            <div class="tafi-tabs__nav-tab" style="white-space: normal;">
                                                <span class="tabs__tab">Chờ xác nhận</span>
                                            </div>
                                            <div class="tafi-tabs__nav-tab" style="white-space: normal;">
                                                <span class="tabs__tab">Chờ lấy hàng</span>
                                            </div>
                                            <div class="tafi-tabs__nav-tab" style="white-space: normal;">
                                                <span class="tabs__tab">Đang giao</span>
                                            </div>
                                            <div class="tafi-tabs__nav-tab" style="white-space: normal;">
                                                <span class="tabs__tab">Đã giao</span>
                                            </div>
                                            <div class="tafi-tabs__nav-tab" style="white-space: normal;">
                                                <span class="tabs__tab">Đơn hủy</span>
                                            </div>
                                        </div>
                                        <div class="tafi-tabs__ink-bar" style="width: 78.25px; transform: translateX(0px);"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @* List panel *@
                    <div class="list-panel">
                        <div class="list-all">
                            <section class="product-list-header product-list-section">
                                <header class="order-search-container">
                                    @using (Html.BeginForm("QLDonHang", "DonHang", FormMethod.Get))
                                    {
                                        <div class="tafi-input-group search-input-group">
                                            <span class="tafi-input-group__prepend" style="width: 206px;">Tên người mua/số điện thoại</span>
                                            <span class="tafi-input-group__append">
                                                <div class="order-search-input">
                                                    <div class="search-wrapper">
                                                        <div class="tafi-input order-search-btn">
                                                            <div class="tafi-input__inner tafi-input__inner--normal">
                                                                @Html.TextBox("SearchString", ViewBag.CrurentFilter as string, new
                                                                {
                                                                        @class = "tafi-input__input",
                                                                        @type = "text",
                                                                        @placeholder = "Hãy nhập vào ít nhất 2 ký tự đầu của từ...",
                                                                        @tabindex = "0",
                                                                        @resize = "none",
                                                                        @size = "large",
                                                                        @rows = "2",
                                                                        @minrows = "2",
                                                                        @clearable = "true",
                                                                        @maxlength = "Infinity",
                                                                        @restrictiontype = "input",
                                                                        @max = "Infinity",
                                                                        @min = "-Infinity",
                                                                })
                                                                <div class="tafi-input__suffix">
                                                                    <span class="tafi-input__suffix-split"></span>
                                                                    <span class="tafi-input__char-count"><i class='bx bx-search'></i></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </span>
                                            <div class="actions" style="margin-left: 16px;">
                                                <button class="tafi-button tafi-button-primary">
                                                    <span>Tìm kiếm</span>
                                                </button>
                                                <button class="tafi-button" style="margin-left: 16px;">
                                                    <span>Nhập lại</span>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </header>
                            </section>
                            <section class="product-list-section product-and-pagination-wrap">
                                <div class="product-list-container">
                                    <div class="tafi-table product-list-view">
                                        @* Table header *@
                                        <div class="tafi-table__header-container">
                                            <div class="tafi-table__main-header">
                                                <table cellpadding="0" border="0" class="tafi-table__header" @*style="width: 1054px;"*@>
                                                    <colgroup>
                                                        <col width="170">
                                                        <col width="170">
                                                        <col width="124">
                                                        <col width="170">
                                                        <col width="150">
                                                        <col width="140">
                                                        <col width="130">
                                                    </colgroup>
                                                    <thead>
                                                        <tr>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <span class="tafi-table__cell-label">
                                                                        Người đặt
                                                                    </span>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <span class="tafi-table__cell-label">
                                                                        Người nhận
                                                                    </span>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <span class="tafi-table__cell-label">
                                                                        Số điện thoại
                                                                    </span>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <div class="tafi-table__cell-wrap">
                                                                        <span class="tafi-table__cell-label">
                                                                            Ngày đặt
                                                                        </span>
                                                                        <i class='bx bx-sort'></i>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <div class="tafi-table__cell-wrap">
                                                                        <span class="tafi-table__cell-label">
                                                                            Trạng thái
                                                                        </span>
                                                                        <i class='bx bx-sort'></i>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <div class="tafi-table__cell-wrap">
                                                                        <span class="tafi-table__cell-label">
                                                                            Phương thức thanh toán
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                            <th colspan="1" rowspan="1">
                                                                <div class="tafi-table__cell">
                                                                    <span class="tafi-table__cell-label">
                                                                        Thao tác
                                                                    </span>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                        @* Table body *@
                                        <div class="tafi-table__body-container">
                                            <div class="tafi-table__main-body">
                                                <div class="tafi-scrollbar">
                                                    <div class="tafi-scrollbar__wrapper">
                                                        @if (Model != null)
                                                        {
                                                            foreach (var item in Model)
                                                            {
                                                                @* Have product *@

                                                                <table cellpadding="0" border="0" class="tafi-table__body" @*style="width: 1054px;"*@>
                                                                    <colgroup>
                                                                        <col width="170">
                                                                        <col width="170">
                                                                        <col width="124">
                                                                        <col width="170">
                                                                        <col width="150">
                                                                        <col width="140">
                                                                        <col width="130">
                                                                    </colgroup>
                                                                    <thead>
                                                                        <tr>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-name" style="margin-left: 0;">
                                                                                            <span class="product-name-text">@(item.NGUOIDUNG==null?"":item.NGUOIDUNG.TENND)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-cate">
                                                                                            <span class="product-cate-text">@Html.DisplayFor(modelItem => item.NGUOINHAN)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-cate">
                                                                                            <span class="product-cate-text">@Html.DisplayFor(modelItem => item.SDT)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-price">
                                                                                            <span class="product-cate-text">@Html.DisplayFor(modelItem => item.NGAYTAO)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-price">
                                                                                            <span class="product-quantity-text">@(item.TRANGTHAIDH==null?"":item.TRANGTHAIDH.TENTT)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-price">
                                                                                            <span class="product-quantity-text">@(item.PTTHANHTOAN==null?"":item.PTTHANHTOAN.TENPT)</span>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td colspan="1" rowspan="1">
                                                                                <div class="tafi-table__cell">
                                                                                    <div class="product-list-item__td product-main">
                                                                                        <div class="product-actions">
                                                                                            <div class="product-actions-text">
                                                                                                <a href="@Url.Action("CapNhat", "DonHang", new { id = item.IDDONHANG})">Cập nhật</a>
                                                                                                <a href="@Url.Action("CTDonHang","DonHang", new { id = item.IDDONHANG})">Xem chi tiết</a>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                    </thead>
                                                                </table>
                                                                <div class="tafi-table__horizontal"></div>
                                                            }

                                                        }
                                                        else
                                                        {
                                                            @* No product *@
                                                            <div class="tafi-table__empty">
                                                                <div class="product-no-result">
                                                                    <span class="sprites-product-list-no-product"></span>
                                                                    <div class="text"> Không tìm thấy đơn hàng </div>
                                                                </div>
                                                            </div>
                                                        }
                                                        @* ------- *@
                                                    </div>
                                                </div>
                                            </div>
                                            @* Product list pagination *@
                                            <div class="product-list-pagination tafi-pagination">
                                                <div class="" style="width: 200px; display: flex; justify-content: center;">
                                                    @Html.PagedListPager(Model, page => Url.Action("QLDonHang", new { page, size = ViewBag.currentSize }))
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

