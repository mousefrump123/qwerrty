@model TMDT.Models.NGUOIDUNG

@{
    ViewBag.Title = "DangNhapNgBan";
    Layout = "~/Views/Shared/Layout-DNKenhNgBan.cshtml";
}

<div class="app-login" style=" background-image: linear-gradient(90deg, #565356 5%, #0d0b0e 100%);">

    <div class="background-left col l-6" style="position: relative;">
        <div class="background-title-content">Bán hàng chuyên nghiệp</div>
        <img src="~/Content/img-slider/background-login.png" alt="" />
    </div>

    <div class="main col l-6">
        @using (Html.BeginForm("DangNhap", "NgBan", FormMethod.Post, new { @action = "", @method = "POST", @class = "form", @id = "form-2", role = "form", @style = "margin-top: 0;" }))
        {
           
                <h3 class="heading">Đăng nhập</h3>
                <p class="desc"></p>

                <div class="spacer"></div>

                <div class="form-group">
                    <label for="email" class="form-label">Email của bạn</label>

                    @Html.TextBoxFor(m => m.EMAIL, new { @id = "email", @name = "email", @type = "text", @placeholder = "TFT@gmail.com", @class = "form-control", @required = true })
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Mật khẩu</label>
                    @Html.PasswordFor(m => m.MATKHAU, new { @id = "password", @name = "password", @type = "password", @placeholder = "Nhập mật khẩu", @class = "form-control", @required = true })
                    <span class="form-message"></span>
                </div>
                <p style="color:red;text-align:center">
                    @if (ViewBag.error != null)
                    {@ViewBag.error}
                </p>

                <button type="submit" class="form-submit" style="background-image: linear-gradient(90deg, #ffce3e91 5%, #ffce3e 100%); color: black; font-weight: 600;">Đăng nhập</button>
                <div class="form-group">
                    <a href="@Url.Action("DangKy", "NgBan")" class="form-register">Đăng ký tài khoản bán hàng</a>
                </div>
           
        }
        </div>
</div>

