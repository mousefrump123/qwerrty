@model TMDT.Models.NGUOIDUNG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/Layout-NgMua.cshtml";
}

<div class="main">

    @using (Html.BeginForm("DangKy", "NgBan", FormMethod.Post, new { @action = "", @method = "POST", @class = "form", @id = "form-2", role = "form", @style = "margin-top: 142px;" }))
    {
        <h3 class="heading">Đăng ký</h3>
        <p class="desc"> Mua hàng tại TFT-Market ❤️</p>

        <div class="spacer"></div>
        <div class="form-group">
            <label for="fullname" class="form-label">Tên đầy đủ</label>
            @*<input type="text" name="fullname" value="" id="fullname" placeholder="VD: Xuân Sơn" class="form-control" required />*@
            @Html.TextBoxFor(m => m.TENND, new { @id = "fullname", @name = "fullname", @type = "text", @placeholder = "Thanh Tuấn", @class = "form-control", @required = true })
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            @*<input type="text" name="email" value="" id="email" placeholder="VD: email@domain.com" class="form-control" required />*@
            @Html.TextBoxFor(m => m.EMAIL, new { @id = "email", @name = "email", @type = "text", @placeholder = "TFT@gmail.com", @class = "form-control", @required = true })
            <span class="form-message"></span>
        </div>
        <p style="color:red;text-align:center">
            @if (ViewBag.error != null)
            {@ViewBag.error}
        </p>
        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            @*<input type="password" name="password" value="" id="password" placeholder="Nhập mật khẩu" class="form-control" required />*@
            @Html.PasswordFor(m => m.MATKHAU, new { @id = "password", @name = "password", @type = "password", @placeholder = "Nhập mật khẩu", @class = "form-control", @required = true })
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Nhập lại mật khẩu</label>
            @*<input type="password" name="password" value="" id="password" placeholder="Nhập lại mật khẩu" class="form-control" required />*@
            @Html.PasswordFor(m => m.NHAPLAIMK, new { @id = "password", @name = "password", @type = "password", @placeholder = "Nhập lại mật khẩu", @class = "form-control", @required = true })
            <span class="form-message"></span>

        </div>
        <p style="color:red;text-align:center">
            @if (ViewBag.error1 != null)
            {@ViewBag.error1}
        </p>
        <div class="form-group">
            <label for="email" class="form-label">Số điện thoại</label>
            @*<input type="number" name="number" value="" id="number" placeholder="Nhập số điện thoại" class="form-control" required />*@
            @Html.TextBoxFor(m => m.SDT, new { @id = "number", @name = "number", @type = "number", @placeholder = "Nhập số điện thoại", @class = "form-control", @required = true })
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Địa chỉ</label>
            @*<input type="text" name="diachi" value="" id="diachi" placeholder="Nhập địa chỉ" class="form-control" required />*@
            @Html.TextBoxFor(m => m.DIACHI, new { @id = "diachi", @name = "diachi", @type = "text", @placeholder = "Nhập số điện thoại", @class = "form-control", @required = true })
            <span class="form-message"></span>
        </div>


        <button type="submit" class="form-submit">Đăng ký</button>

        <div class="form-group">
            <a href="@Url.Action("DangNhap", "NgBan")" class="form-register">Đăng nhập tài khoản</a>
        </div>
    }
</div>

