@model TMDT.Models.CUAHANG
@{
    ViewBag.Title = "CuaHang";
    Layout = "~/Views/Shared/Layout-NgBan.cshtml";
}

<div class="col l-9-1 m-12 c-12">
    <div class="home-product">
        <div class="row sm-gutter" style="padding-right: 16px;">
            <div class="title-page">
                <div class="title-page__link">
                    <a href="@Url.Action("KenhNgBan", "NgBan")" class="title-page__link-label">Trang chủ</a>
                    <i class='bx bx-chevron-right'></i>
                    <a href="@Url.Action("CuaHang", "NgBan")" class="title-page__link-label" style="color: black;">Thông tin cửa hàng</a>
                </div>
            </div>
            <div class="page-content-wrapper">
                <div class="page">
                    <div class="page-header">
                        <div class="title" style="margin-bottom: 6px; font-size: 2.2rem;">Tài khoản</div>
                        <div class="desc">Thay đổi thiết lập cơ bản</div>
                    </div>
                    <div class="setting-card">
                        <div class="setting-card-inner">
                            <div>
                                <div class="setting-card-row">
                                    <div class="main">
                                        <i class='bx bx-user bx-lg icon'></i>
                                        <div id="desc" class="desc width-info">
                                            <div class="title">Tên cửa hàng</div>
                                        </div>
                                        <div class="info">
                                            <div class="account-profile">
                                                <a href="#" class="account-profile-item">
                                                    <img src="@Url.Content(Model.ANHDAIDIEN.ToString())" class="account-profile-avatar" />
                                                    <span class="account-profile-text" style="margin-left: 8px;">@Model.TENCH</span>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="tafi-popover tafi-popover--light">
                                            <div class="tafi-popover__ref">
                                                <button id="button-edit-1" class="tafi-button tafi-button--normal button-edit">Sửa</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="extra">
                                        @using (Html.BeginForm("CapNhatCuaHang", "NgBan", FormMethod.Post, new { enctype = "multipart/form-data", @class = "tafi-form tafi-form--label-right" }))
                                        {
                                            @Html.Hidden("IDCUAHANG", Model.IDCUAHANG)
                                            @Html.Hidden("ANHDAIDIEN", Model.ANHDAIDIEN)
                                            @Html.Hidden("HINHANH", Model.HINHANH)
                                            <div class="tafi-form-item--x-small tafi-form-item">
                                                <label class="tafi-form-item__label">Tên đăng nhập</label>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <div>
                                                            <div class="tafi-input" style="width: 240px; margin-bottom: 4px;">
                                                                <div class="tafi-input__inner tafi-input__inner--normal">

                                                                    @Html.EditorFor(model => model.TENCH, new
                                                                    {
                                                                        htmlAttributes = new
                                                                        {
                                                                            @type = "text",
                                                                            @placeholder = "Nhập vào",
                                                                            @resize = "vertical",
                                                                            @rows = "2",
                                                                            @minrows = "2",
                                                                            @autofocus = "autofocus",
                                                                            @maxlength = "30"
                                                                                     ,
                                                                            @restrictiontype = "input",
                                                                            @max = "Infinity",
                                                                            @min = "-Infinity",
                                                                            @class = "tafi-input__input",
                                                                            @value = "hvtai_1506"
                                                                        }
                                                                    })
                                                                </div>
                                                            </div>
                                                            <span class="username-subtitle">
                                                                Tên đăng nhập phải có độ dài từ 5-30 ký tự. Ký tự hợp lệ bao gồm Tiếng Việt không dấu,
                                                                chữ số, dấu gạch dưới, dấu chấm. Không sử dụng tên đăng nhập chứa dấu cách hoặc chỉ bao gồm chữ số.
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <div>
                                                            <div class="tafi-input" style="width: 240px; margin-bottom: 4px;">
                                                                <div class="tafi-input__inner tafi-input__inner--normal">

                                                                    <img src="@Url.Content(Model.ANHDAIDIEN)" style="width: 82px; height: 82px; border-radius: 50%; border: 1px solid rgba(0, 0, 0, 0.1); object-fit: cover;" id="previewImg1" />
                                                                    <input type="file" style="font-size: 1.4rem; margin-top: 20px;" name="UploadImage1" onchange="ChangeImage(UploadImage1, document.getElementById('previewImg1'))" />
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tafi-form-item">
                                                <label class="tafi-form-item__label empty"></label>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <button class="tafi-button tafi-button-primary tafi-button--normal"><span>Lưu</span></button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                                <div class="setting-card-row">
                                    <div class="main">
                                        <i class='bx bx-image bx-lg icon'></i>
                                        <div id="desc-2" class="desc width-info">
                                            <div class="title">Background</div>
                                        </div>
                                        <div class="info">
                                            <div class="account-profile">
                                                <img src="@Url.Content(Model.HINHANH.ToString())" class="account-profile-avatar" />
                                                
                                            </div>
                                        </div>
                                        <div class="tafi-popover tafi-popover--light">
                                            <div class="tafi-popover__ref">
                                                <button id="button-edit-2" class="tafi-button tafi-button--normal button-edit">Sửa</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="extra">
                                        @using (Html.BeginForm("CapNhatAnhNen", "NgBan", FormMethod.Post, new { enctype = "multipart/form-data", @class = "tafi-form tafi-form--label-right" }))
                                        {
                                            @Html.Hidden("IDCUAHANG", Model.IDCUAHANG)
                                            @Html.Hidden("ANHDAIDIEN", Model.ANHDAIDIEN)
                                            @Html.Hidden("HINHANH", Model.HINHANH)
                                            <div class="tafi-form-item--x-small tafi-form-item">
                                               
                                               
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <div>
                                                            <div class="tafi-input" style="width: 240px; margin-bottom: 4px;">
                                                                <div class="tafi-input__inner tafi-input__inner--normal">

                                                                    <img src="@Url.Content(Model.HINHANH)" style="width: 82px; height: 82px; border-radius: 50%; border: 1px solid rgba(0, 0, 0, 0.1); object-fit: cover;" id="previewImg2" />
                                                                    <input type="file" style="font-size: 1.4rem; margin-top: 20px;" name="UploadImage2" onchange="ChangeImage(UploadImage2, document.getElementById('previewImg2'))" />
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tafi-form-item">
                                                <label class="tafi-form-item__label empty"></label>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <button class="tafi-button tafi-button-primary tafi-button--normal"><span>Lưu</span></button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                               
                                <div class="setting-card-row">
                                    <div class="main">
                                        <i class='bx bx-map bx-lg icon'></i>
                                        <div id="desc-4" class="desc width-info">
                                            <div class="title">Địa chỉ</div>
                                        </div>
                                        <div class="info">
                                            <div class="account-profile">
                                                <span class="account-profile-text" style="margin-left: 8px;">@Model.DIACHI</span>
                                            </div>
                                        </div>
                                        <div class="tafi-popover tafi-popover--light">
                                            <div class="tafi-popover__ref">
                                                <button id="button-edit-3" class="tafi-button tafi-button--normal button-edit">Sửa</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="extra">
                                        @using (Html.BeginForm("CapNhatDiaChi", "NgBan", FormMethod.Post, new { enctype = "multipart/form-data", @class = "tafi-form tafi-form--label-right" }))
                                        {
                                            @Html.Hidden("IDCUAHANG", Model.IDCUAHANG)
                                            @Html.Hidden("ANHDAIDIEN", Model.ANHDAIDIEN)
                                            @Html.Hidden("HINHANH", Model.HINHANH)
                                            <div class="tafi-form-item--x-small tafi-form-item">
                                                <label class="tafi-form-item__label">Tên đăng nhập</label>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <div>
                                                            <div class="tafi-input" style="width: 240px; margin-bottom: 4px;">
                                                                <div class="tafi-input__inner tafi-input__inner--normal">

                                                                    @Html.EditorFor(model => model.DIACHI, new
                                                                    {
                                                                        htmlAttributes = new
                                                                        {
                                                                            @type = "text",
                                                                            @placeholder = "Nhập vào",
                                                                            @resize = "vertical",
                                                                            @rows = "2",
                                                                            @minrows = "2",
                                                                            @autofocus = "autofocus",
                                                                            @maxlength = "30"
                                                                                          ,
                                                                            @restrictiontype = "input",
                                                                            @max = "Infinity",
                                                                            @min = "-Infinity",
                                                                            @class = "tafi-input__input",
                                                                            @value = "hvtai_1506"
                                                                        }
                                                                    })
                                                                </div>
                                                            </div>
                                                        
                                                        </div>
                                                    </div>
                                                </div>
                                               
                                            </div>
                                            <div class="tafi-form-item">
                                                <label class="tafi-form-item__label empty"></label>
                                                <div class="tafi-form-item__control">
                                                    <div class="tafi-form-item__content">
                                                        <button class="tafi-button tafi-button-primary tafi-button--normal"><span>Lưu</span></button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

