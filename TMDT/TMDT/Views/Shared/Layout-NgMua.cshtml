    </script>
    <script>
        // Lắng nghe sự kiện click trên các mục trong danh sách khu vực
        document.addEventListener('DOMContentLoaded', function () {
            var optionItems = document.querySelectorAll('.header__search-option-item');

            optionItems.forEach(item => {
                item.addEventListener('click', function () {
                    var selectedAreaInput = document.querySelector('input[name="selectedArea"]');
                    var areaValue = item.textContent.trim(); // Lấy giá trị từ phần tử span
                    selectedAreaInput.value = areaValue;

                    // Loại bỏ lớp active từ tất cả các mục khác
                    optionItems.forEach(otherItem => otherItem.classList.remove('header__search-option-item-active'));
                    // Thêm lớp active vào mục được chọn
                    item.classList.add('header__search-option-item-active');
                });
            });
        });
    </script>
